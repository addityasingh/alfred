{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "alwaysStrict": true,
      "strictPropertyInitialization": false,
      "esModuleInterop": true,
      "pretty": true,
      "allowJs": true,
      "outDir": "./dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": [
        "es2017"
      ],
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/"
    ]
}